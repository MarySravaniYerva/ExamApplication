<body> 
    <header>

        <nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3">


            <div class="row">
                <div  class="col-2 ps-5">
                    <img style="width:130% " src="/images/download.jpg" alt="SSC Logo">
                </div>
           
                <div class="col-4 mt-2">
                    <h6>Staff Selection Commission</h6>
                    <span>(Government of India)</span>
                </div>
                      
                <div class="col-6  mt-2">


                    @*<ul class="list-group list-group-horizontal list-unstyled ">*@
                    <span >
                        <a class=" btn btn-primary text-light" href="~/Home/Home" >Home</a>
                    </span>&nbsp;
                    @if (Accessor.HttpContext.Session.GetString("EnrollId") == null)
                    {
                        <span>
                            <a class="btn btn-danger text-light" href="~/Home/Login" >Login</a>
                        </span>
                       
                    }
                   
                    @if (Accessor.HttpContext.Session.GetString("EnrollId") != null)
                    {
                        <span>
                            <a class="btn btn-info text-light " id="applyForExam" href="~/Home/Apply" >Apply</a>
                        </span>
                    }
                    &nbsp;
                    <span>
                        <a class="btn btn-success text-light" href="~/Home/AdmitCard" >AdmitCard</a>
                    </span>&nbsp;

                    <span>
                        <a class="btn btn-warning text-light" href="~/Home/Result" >Result</a>
                    </span>
                    

                    @* </ul>*@
                </div>
                
            </div>
            <div>
                @if (Accessor.HttpContext.Session.GetString("EnrollId") != null)
                {
                    <span>
                        <a class="btn btn-secondary text-light" id="logOut" href="~/Home/Logout" data-target="#logoutModal">
                            Logout
                        </a>
                    </span>
                }
                <img style="width:25%" src="/images/nationalemb.png">
            </div>
         
        </nav>
